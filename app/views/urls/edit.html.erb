<div class="container" style="margin:4%">
  <h1>Edit Post Id: <%= @url.id %></h1>
  <%= link_to 'Back', urls_path, class: "btn btn-danger" %>
  <%= form_for @url, url: url_path({ :id => @url, :page => @page }), method: :patch do |f| %>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class:"form-control" %>
    </div>
    <div>Shorten
      URL: <%= link_to "#{request.base_url}/#{@url.short_url}", "#{request.base_url}/#{@url.short_url}", target: :_blank %></div>
    <div>Original URL: <%= @url.long_url %></div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  <% end %>

</div>